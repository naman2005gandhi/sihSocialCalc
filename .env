# Backend Configuration
PORT=5000  # Port on which the Node.js server will run
MONGODB_URI=mongodb://localhost:27017/sheets-clone  # MongoDB connection string
JWT_SECRET=your_jwt_secret_key  # Secret key for JWT authentication
REDIS_URL=redis://localhost:6379  # Redis server URL for session management or caching

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000  # API URL for the React frontend to communicate with the backend
REACT_APP_GOOGLE_API_KEY=your_google_api_key  # API Key for any Google services (like Sheets, Maps, etc.)

# Real-Time Collaboration Configuration
SOCKET_SERVER_URL=http://localhost:5000  # WebSocket server URL for real-time communication

# Optional: Deployment Configurations
NODE_ENV=development  # Set the environment (development, production)
